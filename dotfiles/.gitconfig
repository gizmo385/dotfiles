[user]
	name = Christopher Chapline
	email = cachapline8@gmail.com
[core]
	excludesfile = /Users/gizmo385/.global_gitignore
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    addp = add --patch
[init]
	defaultBranch = main
[oh-my-zsh]
	hide-status = 1
	hide-dirty = 1
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
    branch = delta
    tag = delta
[delta]
    side-by-side = true
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true

[interactive]
    diffFilter = delta --color-only
[pull]
    rebase = false
[rerere]
    enabled = true
[commit]
    verbose = true
